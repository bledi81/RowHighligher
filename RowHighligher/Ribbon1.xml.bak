<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab id="tabRowHighlighter" label="Row Highlighter">
        <group id="groupHighlighterSettings" label="Highlighter Settings">
          <toggleButton id="toggleEnableHighlighter"
                        label="Enable Row Highlighter"
                        size="large"
                        onAction="OnToggleEnableHighlighter_Click"
                        getPressed="GetEnableHighlighter_Pressed" 
                        imageMso="EnableInlineEdit"/>
          <button id="buttonChangeColor"
                  label="Change Highlight Color"
                  size="large"
                  onAction="OnChangeColor_Click"
                  imageMso="ColorPickerCalendar"/>
          <separator id="separator1" />
          <checkBox id="checkboxPlaceRuleOnTop"
                    label="Place Rule on Top"
                    getPressed="GetPlaceRuleOnTop_Pressed"
                    onAction="OnPlaceRuleOnTop_Click"/>
          <checkBox id="checkboxMakeRuleBold"
                    label="Make Font Bold"
                    getPressed="GetMakeRuleBold_Pressed"
                    onAction="OnMakeRuleBold_Click"/>
          <checkBox id="checkboxCustomFontColor"
                    label="Custom Font Color"
                    getPressed="GetCustomFontColor_Pressed"
                    onAction="OnCustomFontColor_Click"/>
          <button id="buttonChangeFontColor"
                  label="Font Color"
                  size="normal"
                  onAction="OnChangeFontColor_Click"
                  imageMso="ColorPickerFontColor"
                  getEnabled="GetChangeFontColor_Enabled"/>
        </group>
        <group id="groupCalculator" label="Scientific Calculator">
          <button id="buttonShowCalculator"
                  label="Scientific Calculator"
                  size="large"
                  onAction="OnShowCalculator_Click"
                  imageMso="CalculatorLarge"/>
          <checkBox id="checkboxDetachCalculator"
                    label="Detach Calculator"
                    getPressed="GetDetachCalculator_Pressed"
                    onAction="OnDetachCalculator_Click"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>

